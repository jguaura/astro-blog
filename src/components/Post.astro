---
import { Image } from "astro:assets";
import { getEntryBySlug, type CollectionEntry } from "astro:content";

type Props = {
  post: CollectionEntry<'posts'>
}

const { post } = Astro.props;
---

<article>
  <a href={`/blog/${[post.slug]}`} class="flex flex-col gap-2">
    <Image
     src={post.data.image}
     width={600}
     height={600 / 1.5}
     alt={post.data.title}
     class="rounded-lg shadow-xl aspect-thumbnail object-cover"
     format="webp"
    />
    <h2 class="text-2xl text-zinc-900 font-semibold inline-block">{post.data.title}</h2>
    <p class="text-zinc-500 text-lg line-clamp-2">{post.body}</p>
  </a>
</article>